<?xml version="1.0" encoding="UTF-8"?>
<site xmlns="http://maven.apache.org/SITE/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/SITE/2.0.0 https://maven.apache.org/xsd/site-2.0.0.xsd">

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>2.0.0</version>
    </skin>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <sideBarEnabled>false</sideBarEnabled>
            <profile>production</profile>
            <topBarIcon>
                <name>${project.name}</name>
                <alt>OpenWMS.org</alt>
                <src>/images/logo.png</src>
                <href>/index.html</href>
            </topBarIcon>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
            <gitHub>
                <projectId>openwms/${project.artifactId}</projectId>
                <ribbonOrientation>left</ribbonOrientation>
                <ribbonColor>black</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>

    <body>
        <menu name="Documentation">
            <item name="Home" href="index.html" />
            <item name="Wiki" href="https://wiki.openwms.cloud/projects/core-units/wiki" />
            <item name="Javadoc" href="apidocs/index.html" />
            <item name="Sonar" href="https://sonarcloud.io/dashboard?id=org.openwms:${project.artifactId}" />
            <item name="Jacoco" href="jacoco-merged-test-coverage-report/index.html" />
        </menu>
        <menu name="Project" ref="reports" />
    </body>

</site>
